<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kuis_tebak_hijaiyah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info"
    tools:context="com.irfan.iqroku.Main.KuisTebakHijaiyahActivity">

    <ImageButton
        android:id="@+id/soal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/alif"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/jawaban1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/b_hijaiyah_alif"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/soal"
        />
    <ImageButton
        android:id="@+id/jawaban2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/b_hijaiyah_ba"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/soal"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/jawaban1"
        />
    <ImageButton
        android:id="@+id/jawaban3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/b_hijaiyah_ta"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/soal"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/jawaban1"
        />

    <TextView
        android:text="SKOR : "
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/soal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:id="@+id/skor" />



</RelativeLayout>
