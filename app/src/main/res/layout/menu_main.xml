<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuutama"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:id="@+id/imgSalam"
        android:background="#f2fffe"
        android:src="@drawable/assalam"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSalam"
        android:layout_marginTop="108dp"
        android:id="@+id/menu1"
        android:orientation="horizontal"

        >


        <ImageView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:src="@drawable/iqra"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/imgiqro"
            android:background="@drawable/tombol_menu"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/imglatihan"
            android:background="@drawable/tombol_latihan"
            android:src="@drawable/latihan"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu1"
        android:layout_marginTop="108dp"
        android:orientation="horizontal"

        >


        <ImageView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/imglogout"
            android:background="@drawable/tombol_info"
            android:src="@drawable/ic_exit_to_app_black_24dp"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/imginfo"
            android:background="@drawable/tombol_exit"
            android:src="@drawable/ic_error_outline_black_24dp"

            />


    </LinearLayout>



</RelativeLayout>